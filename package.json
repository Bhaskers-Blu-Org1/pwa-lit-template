{
  "name": "app-template",
  "version": "0.1.0",
  "description": "A template for building web applications using LitElement, Vaadin Router and Apollo Client",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "rimraf server/dist/ && rollup --config --environment NODE_ENV:production",
    "bundle-size-check": "npm run build; bundlesize",
    "format": "npm run format:prettier && npm run format:stylelint",
    "format:prettier": "prettier --write \"**/*.{js,json,md,ts}\"",
    "format:stylelint": "stylelint \"src/{components,pages}/**/*.ts\" --fix",
    "lint": "npm run lint:eslint && npm run lint:lit && npm run lint:stylelint",
    "lint:eslint": "eslint \"**/*.{js,ts}\"",
    "lint:lit": "lit-analyzer \"src/{components,pages}/**/*.ts\" --strict --quiet",
    "lint:stylelint": "stylelint \"src/{components,pages}/**/*.ts\"",
    "postinstall": "patch-package",
    "serve": "es-dev-server --app-index index.html --file-extensions .ts --node-resolve --babel --watch",
    "serve:production": "es-dev-server --app-index --root-dir server/dist/ index.html",
    "start": "npm run serve",
    "test": "echo \"Error: no test specified\"",
    "types:check": "tsc --noEmit",
    "types:generate": "rimraf src/__generated__/ && apollo client:codegen --target typescript --outputFlat src/__generated__/"
  },
  "dependencies": {
    "fast-json-stable-stringify": "abdonrd/fast-json-stable-stringify#es-modules",
    "graphql-tag": "abdonrd/graphql-tag#es-modules",
    "zen-observable": "abdonrd/zen-observable#es-modules",
    "@vaadin/router": "^1.6.0",
    "apollo-boost": "^0.4.0",
    "graphql": "^14.6.0",
    "lit-element": "^2.2.0",
    "lodash-es": "^4.17.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.0",
    "@babel/plugin-proposal-decorators": "^7.8.0",
    "@babel/preset-typescript": "^7.8.0",
    "@open-wc/building-rollup": "^0.20.0",
    "@rollup/plugin-replace": "^2.3.0",
    "@types/lodash-es": "^4.17.0",
    "@types/workbox-window": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "apollo": "^2.22.0",
    "bundlesize": "^0.18.0",
    "es-dev-server": "^1.40.0",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-lit": "^1.2.0",
    "eslint-plugin-wc": "^1.2.0",
    "husky": "^4.2.0",
    "lint-staged": "^10.0.0",
    "lit-analyzer": "^1.1.0",
    "patch-package": "^6.2.0",
    "prettier": "1.19.1",
    "prettier-plugin-package": "^0.3.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.31.0",
    "rollup-plugin-cpy": "^2.0.0",
    "stylelint": "^13.1.0",
    "stylelint-config-rational-order": "^0.1.0",
    "stylelint-config-standard": "^20.0.0",
    "stylelint-order": "^4.0.0",
    "typescript": "^3.7.0",
    "workbox-window": "^4.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md,ts}": [
      "prettier --write"
    ],
    "**/*.{js,ts}": [
      "eslint --fix"
    ],
    "src/{components,pages}/**/*.ts": [
      "stylelint --fix",
      "lit-analyzer --strict --quiet"
    ]
  }
}
