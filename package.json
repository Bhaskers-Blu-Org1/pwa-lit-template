{
  "name": "pwa-starter",
  "version": "0.1.0",
  "description": "A template for building web applications using LitElement and Vaadin Router",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "npm run typescript:compile && rimraf server/dist/ && rollup --config",
    "format": "npm-run-all format:*",
    "format:prettier": "prettier --write \"**/*{html,js,json,md,ts,webmanifest}\"",
    "format:stylelint": "stylelint \"src/{components,pages}/**/*.ts\" --fix",
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "eslint \"**/*.{js,ts}\"",
    "lint:stylelint": "stylelint \"src/{components,pages}/**/*.ts\"",
    "lit:check-types": "lit-analyzer \"src/{components,pages}/**/*.ts\" --strict",
    "postinstall": "patch-package",
    "serve": "es-dev-server --app-index index.html --node-resolve --watch",
    "serve:production": "es-dev-server --app-index index.html --root-dir server/dist/",
    "start": "npm-run-all --parallel typescript:compile-watch serve",
    "test": "echo \"Error: no test specified\"",
    "typescript:check-types": "rimraf src-js/ && tsc --noEmit && npm run lit:check-types",
    "typescript:compile": "rimraf src-js/ && tsc",
    "typescript:compile-watch": "tsc --watch"
  },
  "dependencies": {
    "@vaadin/router": "^1.7.0",
    "lit-element": "^2.3.0",
    "tslib": "^1.11.0",
    "workbox-window": "^5.1.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.0",
    "@babel/plugin-proposal-decorators": "^7.8.0",
    "@open-wc/building-rollup": "^1.2.0",
    "@rollup/plugin-replace": "^2.3.0",
    "@types/lodash-es": "^4.17.0",
    "@types/workbox-window": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^2.29.0",
    "@typescript-eslint/parser": "^2.29.0",
    "chalk": "^4.0.0",
    "deepmerge": "^4.2.0",
    "es-dev-server": "^1.47.0",
    "eslint": "^6.8.0",
    "eslint-config-ibmresearch": "^0.12.0",
    "eslint-plugin-lit": "^1.2.0",
    "eslint-plugin-wc": "^1.2.0",
    "husky": "^4.2.0",
    "lint-staged": "^10.1.0",
    "lit-analyzer": "^1.1.0",
    "npm-run-all": "^4.1.0",
    "patch-package": "^6.2.0",
    "prettier": "2.0.5",
    "prettier-plugin-package": "^1.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.6.0",
    "rollup-plugin-copy": "^3.3.0",
    "stylelint": "^13.3.0",
    "stylelint-config-ibmresearch": "^0.4.0",
    "typescript": "^3.8.0"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      [
        "@babel/plugin-proposal-decorators",
        {
          "decoratorsBeforeExport": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "ibmresearch/typescript-lit-html",
    "rules": {
      "@typescript-eslint/no-non-null-assertion": "off"
    },
    "overrides": [
      {
        "files": [
          "rollup.config.js"
        ],
        "env": {
          "node": true,
          "browser": false
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*{html,js,json,md,ts,webmanifest}": [
      "prettier --write"
    ],
    "**/*.{js,ts}": [
      "eslint --fix"
    ],
    "src/{components,pages}/**/*.ts": [
      "stylelint --fix"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-ibmresearch"
    ]
  }
}
