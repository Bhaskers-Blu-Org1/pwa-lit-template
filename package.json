{
  "name": "pwa-lit-template",
  "version": "0.1.0",
  "description": "A template for building Progressive Web Applications using LitElement and Vaadin Router",
  "license": "MIT",
  "repository": "github:IBM/pwa-lit-template",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "npm-run-all typescript:compile build:rollup",
    "build:rollup": "rimraf server/dist/ && rollup --config",
    "format": "npm-run-all format:*",
    "format:prettier": "prettier --write \"**/*{html,js,json,md,ts,webmanifest}\"",
    "format:stylelint": "stylelint \"client/src/{components,pages}/**/*.ts\" --fix",
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "eslint \"**/*.{js,ts}\"",
    "lint:stylelint": "stylelint \"client/src/{components,pages}/**/*.ts\"",
    "lit:check-types": "lit-analyzer \"client/src/{components,pages}/**/*.ts\" --strict --maxWarnings 999",
    "postinstall": "(cd client/ && npm install); (cd server/ && npm install)",
    "regenerate-lock-files": "rimraf \"**/node_modules/\" \"**/package-lock.json\" && npm install",
    "serve": "es-dev-server --root-dir client/ --app-index index.html --node-resolve --watch",
    "serve:production": "es-dev-server --root-dir server/dist/ --app-index index.html --compatibility none",
    "start": "npm-run-all --parallel typescript:compile-watch serve",
    "test": "echo \"Error: no test specified\"",
    "typescript:check-types": "rimraf client/src-js/ && tsc --noEmit && npm run lit:check-types",
    "typescript:compile": "rimraf client/src-js/ && tsc",
    "typescript:compile-watch": "tsc --watch"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.0",
    "@babel/plugin-proposal-decorators": "^7.8.0",
    "@open-wc/building-rollup": "^1.2.0",
    "@rollup/plugin-replace": "^2.3.0",
    "@typescript-eslint/eslint-plugin": "^2.34.0",
    "@typescript-eslint/parser": "^2.34.0",
    "chalk": "^4.0.0",
    "deepmerge": "^4.2.0",
    "es-dev-server": "^1.50.0",
    "eslint": "^6.8.0",
    "eslint-config-ibmresearch": "^0.13.0",
    "eslint-plugin-lit": "^1.2.0",
    "eslint-plugin-wc": "^1.2.0",
    "husky": "^4.2.0",
    "lint-staged": "^10.2.0",
    "lit-analyzer": "^1.1.0",
    "npm-run-all": "^4.1.0",
    "prettier": "2.0.5",
    "prettier-plugin-package": "^1.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.10.0",
    "rollup-plugin-copy": "^3.3.0",
    "stylelint": "^13.5.0",
    "stylelint-config-ibmresearch": "^0.4.0",
    "typescript": "^3.9.0"
  },
  "babel": {
    "plugins": [
      "@babel/plugin-proposal-class-properties",
      [
        "@babel/plugin-proposal-decorators",
        {
          "decoratorsBeforeExport": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "extends": "ibmresearch",
    "overrides": [
      {
        "files": "client/**/*",
        "extends": "ibmresearch/typescript-lit-html",
        "rules": {
          "@typescript-eslint/no-non-null-assertion": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*{html,js,json,md,ts,webmanifest}": "prettier --write",
    "**/*.{js,ts}": "eslint --fix",
    "src/{components,pages}/**/*.ts": "stylelint --fix"
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "stylelint": {
    "extends": "stylelint-config-ibmresearch"
  }
}
