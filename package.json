{
  "name": "application-template-lit-element",
  "version": "0.1.0",
  "description": "A template for building web applications using LitElement",
  "license": "MIT",
  "dependencies": {
    "lit-element": "^2.2.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-decorators": "^7.4.0",
    "@babel/preset-typescript": "^7.3.0",
    "@open-wc/building-rollup": "^0.9.0",
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "es-dev-server": "^1.8.0",
    "eslint": "^6.1.0",
    "eslint-config-prettier": "^6.0.0",
    "eslint-plugin-lit": "^1.1.0",
    "eslint-plugin-wc": "^1.1.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.2.0",
    "prettier": "1.18.2",
    "rimraf": "^2.6.0",
    "rollup": "^1.17.0",
    "typescript": "^3.5.0"
  },
  "scripts": {
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint 'src/**/*.{js,ts}'",
    "format:prettier": "prettier --write '**/*.{js,json,md,ts}'",
    "serve": "es-dev-server --app-index index.html --file-extensions .ts --node-resolve --babel --watch --open",
    "start": "npm run serve",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rimraf dist && rollup --config",
    "start:build": "es-dev-server --app-index --root-dir dist/ index.html --open"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md,ts}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  }
}
