{
  "name": "app-template",
  "version": "0.1.0",
  "description": "A template for building web applications using LitElement and Vaadin Router",
  "license": "MIT",
  "engines": {
    "node": ">=10.0.0"
  },
  "scripts": {
    "build": "rimraf dist && rollup --config --environment NODE_ENV:production && npm run build:generate-sw",
    "build:generate-sw": "workbox generateSW workbox-config.js",
    "bundle-size-check": "bundlesize",
    "format": "npm run format:prettier",
    "format:prettier": "prettier --write \"**/*.{js,json,md,ts}\"",
    "lint": "npm run lint:eslint && npm run lint:lit",
    "lint:eslint": "eslint \"**/*.{js,ts}\"",
    "lint:lit": "lit-analyzer \"src/{components,pages}/**/*.ts\" --strict --quiet",
    "postinstall": "patch-package",
    "serve": "es-dev-server --app-index index.html --file-extensions .ts --node-resolve --babel --watch --open",
    "serve:production": "es-dev-server --app-index --root-dir dist/ index.html --open",
    "start": "npm run serve",
    "test": "echo \"Error: no test specified\" && exit 1",
    "type-check": "tsc --noEmit"
  },
  "dependencies": {
    "@vaadin/router": "^1.4.0",
    "apollo-boost": "^0.4.0",
    "graphql": "^14.5.0",
    "lit-element": "^2.2.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.5.0",
    "@babel/plugin-proposal-decorators": "^7.6.0",
    "@babel/preset-typescript": "^7.6.0",
    "@open-wc/building-rollup": "^0.9.0",
    "@types/workbox-window": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^2.3.0",
    "@typescript-eslint/parser": "^2.3.0",
    "babel-plugin-transform-commonjs": "^1.1.0",
    "bundlesize": "^0.18.0",
    "es-dev-server": "^1.18.0",
    "eslint": "^6.4.0",
    "eslint-config-prettier": "^6.3.0",
    "eslint-plugin-lit": "^1.2.0",
    "eslint-plugin-wc": "^1.2.0",
    "husky": "^3.0.0",
    "lint-staged": "^9.4.0",
    "lit-analyzer": "^1.1.0",
    "patch-package": "^6.2.0",
    "prettier": "1.18.2",
    "prettier-plugin-package": "^0.3.0",
    "rimraf": "^3.0.0",
    "rollup": "^1.21.0",
    "rollup-plugin-cpy": "^2.0.0",
    "rollup-plugin-replace": "^2.2.0",
    "typescript": "^3.6.0",
    "workbox-cli": "^4.3.0",
    "workbox-window": "^4.3.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "tsc --noEmit && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,json,md,ts}": [
      "prettier --write",
      "git add"
    ],
    "**/*.{js,ts}": [
      "eslint --fix",
      "git add"
    ],
    "src/{components,pages}/**/*.ts": [
      "lit-analyzer --strict --quiet",
      "git add"
    ]
  }
}
