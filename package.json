{
  "name": "pwa-starter",
  "version": "0.1.0",
  "description": "A template for building web applications using LitElement, Vaadin Router and Apollo Client",
  "license": "MIT",
  "engines": {
    "node": ">=12.0.0"
  },
  "scripts": {
    "build": "rimraf server/dist/ && rollup --config --environment NODE_ENV:production",
    "build:staging": "rimraf server/dist/ && rollup --config --environment NODE_ENV:staging",
    "bundle-size-check": "npm run build && bundlesize",
    "format": "npm-run-all format:*",
    "format:prettier": "prettier --write \"**/*{html,js,json,md,ts,webmanifest}\"",
    "format:stylelint": "stylelint \"src/{components,pages}/**/*.ts\" --fix",
    "lint": "npm-run-all --parallel lint:*",
    "lint:eslint": "eslint \"**/*.{js,ts}\"",
    "lint:lit": "lit-analyzer \"src/{components,pages}/**/*.ts\" --strict --quiet",
    "lint:stylelint": "stylelint \"src/{components,pages}/**/*.ts\"",
    "postinstall": "patch-package",
    "serve": "es-dev-server --app-index index.html --file-extensions .ts --node-resolve --babel --watch",
    "serve:production": "es-dev-server --app-index index.html --root-dir server/dist/",
    "start": "npm run serve",
    "test": "echo \"Error: no test specified\"",
    "typescript:check-types": "tsc --noEmit",
    "typescript:generate-types": "rimraf src/__generated__/ && apollo client:codegen --target typescript --outputFlat src/__generated__/"
  },
  "dependencies": {
    "@vaadin/router": "^1.7.0",
    "apollo-boost": "^0.4.0",
    "fast-json-stable-stringify": "github:IBMResearch/fast-json-stable-stringify#es-modules",
    "graphql": "^14.6.0",
    "graphql-tag": "github:IBMResearch/graphql-tag#es-modules",
    "lit-element": "^2.3.0",
    "lodash-es": "^4.17.0",
    "zen-observable": "github:IBMResearch/zen-observable#es-modules"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.8.0",
    "@babel/plugin-proposal-decorators": "^7.8.0",
    "@babel/preset-typescript": "^7.9.0",
    "@open-wc/building-rollup": "^0.22.0",
    "@rollup/plugin-replace": "^2.3.0",
    "@types/lodash-es": "^4.17.0",
    "@types/workbox-window": "^4.3.0",
    "@typescript-eslint/eslint-plugin": "^2.28.0",
    "@typescript-eslint/parser": "^2.28.0",
    "apollo": "^2.27.0",
    "bundlesize": "^0.18.0",
    "es-dev-server": "^1.46.0",
    "eslint": "^6.8.0",
    "eslint-config-ibmresearch": "^0.11.0",
    "eslint-plugin-lit": "^1.2.0",
    "eslint-plugin-wc": "^1.2.0",
    "husky": "^4.2.0",
    "lint-staged": "^10.1.0",
    "lit-analyzer": "^1.1.0",
    "npm-run-all": "^4.1.0",
    "patch-package": "^6.2.0",
    "prettier": "2.0.4",
    "prettier-plugin-package": "^1.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.6.0",
    "rollup-plugin-cpy": "^2.0.0",
    "stylelint": "^13.3.0",
    "stylelint-config-ibmresearch": "^0.4.0",
    "tslib": "^1.11.0",
    "typescript": "^3.8.0",
    "workbox-window": "^4.3.0"
  },
  "eslintConfig": {
    "extends": "ibmresearch/typescript-lit-html",
    "rules": {
      "@typescript-eslint/no-non-null-assertion": "off"
    },
    "overrides": [
      {
        "files": [
          "apollo.config.js",
          "rollup.config.js",
          "workbox-config.js"
        ],
        "env": {
          "node": true,
          "browser": false
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*{html,js,json,md,ts,webmanifest}": [
      "prettier --write"
    ],
    "**/*.{js,ts}": [
      "eslint --fix"
    ],
    "src/{components,pages}/**/*.ts": [
      "stylelint --fix",
      "lit-analyzer --strict --quiet"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "trailingComma": "none"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-ibmresearch"
    ]
  }
}
